\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage{xcolor}

%Colour
\definecolor{aublue}{HTML}{0A1439}

% Settings
\useinnertheme{igfae}
\useoutertheme{igfae}
\usecolortheme{igfae}
\usefonttheme{igfae}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]

% Command to make title page
\def\maketitle{
    {
            \setbeamertemplate{footline}{}%
            \begin{frame}[noframenumbering]%
                \titlepage%
            \end{frame}%
        }
}

% Command to add color box
\newcommand{\mycolorbox}[2]{
    \leavevmode
    \hfill{}
    \begin{beamercolorbox}[sep=0.5em, center, wd=0.75\linewidth,rounded=true]{#1}
        #2
    \end{beamercolorbox}%
    \hfill{}
    \vspace{0.5em}
}

\mode<all>